<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <bexspayment>
                <payment_action>authorize</payment_action><!-- You can use another methor like capture  -->
                <model>MagArs\Bexs\Model\PaymentMethod</model>
                <active>1</active>
                <title>Pay with BEXS</title>
                <order_status>pending_payment</order_status><!-- set default order status-->
            </bexspayment>
        </payment>
    </default>
</config>
